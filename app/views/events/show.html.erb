<div class="body-container" data-controller="shuffle">
  <h1>Voici la liste de cadeaux</h1>

  <div class="gift-list">
    <% @gifts.each_with_index do |gift, index| %>
      <% if index < 5 %>
        <div class="gift-item-row"><div class="gift-item" data-shuffle-target="index"><%= gift %></div><i class="fa-solid fa-shuffle" data-action="click->shuffle#update"></i></div>
      <% else %>
        <div class="gift-item-row d-none"><div class="gift-item" data-shuffle-target="hidden"><%= gift %></div><i class="fa-solid fa-shuffle" data-action="click->shuffle#update"></i></div>
      <% end %>
    <% end %>
  </div>
</div>


